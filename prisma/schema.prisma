generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Qadmin_players {
  id      Int    @id @default(autoincrement())
  steamid String @unique
  rank    String
}

model Log {
  id         Int      @id @default(autoincrement())
  text       String
  category   Category @relation(fields: [categoryId], references: [id])
  createdAt  DateTime @default(now())
  categoryId Int
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
  Log  Log[]
}
